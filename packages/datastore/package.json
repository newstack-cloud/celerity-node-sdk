{
  "name": "@celerity-sdk/datastore",
  "version": "0.2.1",
  "description": "NoSQL data store abstraction for the Celerity Node SDK (DynamoDB / Cloud Datastore / Cosmos DB)",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/newstack-cloud/celerity-node-sdk.git",
    "directory": "packages/datastore"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest run"
  },
  "dependencies": {
    "@celerity-sdk/types": "workspace:^",
    "@celerity-sdk/config": "workspace:^"
  },
  "peerDependencies": {
    "@aws-sdk/client-dynamodb": "^3.0.0",
    "@aws-sdk/lib-dynamodb": "^3.0.0",
    "@google-cloud/datastore": "^9.0.0",
    "@azure/cosmos": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "@aws-sdk/client-dynamodb": {
      "optional": true
    },
    "@aws-sdk/lib-dynamodb": {
      "optional": true
    },
    "@google-cloud/datastore": {
      "optional": true
    },
    "@azure/cosmos": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
