{
  "name": "@celerity-sdk/telemetry",
  "version": "0.3.0",
  "description": "Observability layer for the Celerity Node SDK â€” pino-based logger and OTel-based tracing",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/newstack-cloud/celerity-node-sdk.git",
    "directory": "packages/telemetry"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./setup": {
      "import": "./dist/setup.js"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest run"
  },
  "dependencies": {
    "@celerity-sdk/common": "workspace:^",
    "@celerity-sdk/types": "workspace:^",
    "debug": "^4.4.0",
    "pino": "^10.0.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/api-logs": "^0.200.0",
    "@opentelemetry/sdk-node": "^0.200.0",
    "@opentelemetry/sdk-trace-node": "^2.0.0",
    "@opentelemetry/sdk-logs": "^0.200.0",
    "@opentelemetry/resources": "^2.0.0",
    "@opentelemetry/semantic-conventions": "^1.25.0",
    "@opentelemetry/exporter-trace-otlp-grpc": "^0.200.0",
    "@opentelemetry/exporter-logs-otlp-grpc": "^0.200.0",
    "@opentelemetry/core": "^2.0.0",
    "@opentelemetry/propagator-aws-xray": "^2.0.0",
    "@opentelemetry/id-generator-aws-xray": "^2.0.0",
    "@opentelemetry/instrumentation": "^0.200.0",
    "@opentelemetry/instrumentation-http": "^0.200.0",
    "@opentelemetry/instrumentation-undici": "^0.14.0"
  },
  "devDependencies": {
    "pino-pretty": "^13.0.0"
  },
  "peerDependencies": {
    "@opentelemetry/instrumentation-aws-sdk": "^0.50.0",
    "@opentelemetry/instrumentation-ioredis": "^0.50.0",
    "@opentelemetry/instrumentation-pg": "^0.50.0",
    "@opentelemetry/instrumentation-mysql2": "^0.50.0"
  },
  "peerDependenciesMeta": {
    "@opentelemetry/instrumentation-aws-sdk": {
      "optional": true
    },
    "@opentelemetry/instrumentation-ioredis": {
      "optional": true
    },
    "@opentelemetry/instrumentation-pg": {
      "optional": true
    },
    "@opentelemetry/instrumentation-mysql2": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
