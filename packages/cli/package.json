{
  "name": "@celerity-sdk/cli",
  "version": "0.1.0",
  "description": "Build-time extraction tool for Celerity decorator metadata",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/newstack-cloud/celerity-node-sdk.git",
    "directory": "packages/cli"
  },
  "type": "module",
  "bin": {
    "celerity-extract": "./dist/extract/cli.js"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./schemas/handler-manifest.v1.schema.json": "./schemas/handler-manifest.v1.schema.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "schemas"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest run"
  },
  "dependencies": {
    "@celerity-sdk/common": "workspace:^",
    "@celerity-sdk/core": "workspace:^",
    "@celerity-sdk/types": "workspace:^",
    "debug": "^4.4.0",
    "reflect-metadata": "^0.2.0"
  },
  "devDependencies": {
    "ajv": "^8.17.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
