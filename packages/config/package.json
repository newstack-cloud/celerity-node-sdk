{
  "name": "@celerity-sdk/config",
  "version": "0.3.1",
  "description": "Configuration resolution, secret access, and platform detection for the Celerity Node SDK",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/newstack-cloud/celerity-node-sdk.git",
    "directory": "packages/config"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest run"
  },
  "dependencies": {
    "@celerity-sdk/types": "workspace:^",
    "debug": "^4.4.0"
  },
  "devDependencies": {
    "@aws-sdk/client-secrets-manager": "^3.992.0",
    "@aws-sdk/client-ssm": "^3.992.0",
    "ioredis": "^5.9.3"
  },
  "peerDependencies": {
    "@aws-sdk/client-secrets-manager": "^3.0.0",
    "@aws-sdk/client-ssm": "^3.0.0",
    "ioredis": "^5.9.3"
  },
  "peerDependenciesMeta": {
    "@aws-sdk/client-secrets-manager": {
      "optional": true
    },
    "@aws-sdk/client-ssm": {
      "optional": true
    },
    "ioredis": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
