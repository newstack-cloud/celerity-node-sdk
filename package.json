{
  "name": "celerity-node-sdk",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/newstack-cloud/celerity-node-sdk.git"
  },
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "pnpm -r run build",
    "test": "vitest",
    "test:unit": "vitest run --coverage",
    "test:unit:no-cov": "vitest run",
    "test:integration": "bash scripts/integration-test.sh --coverage tests/integration/",
    "test:integration:no-cov": "bash scripts/integration-test.sh tests/integration/",
    "test:all": "bash scripts/integration-test.sh --coverage",
    "test:all:no-cov": "bash scripts/integration-test.sh",
    "lint": "eslint packages/",
    "lint:fix": "eslint packages/ --fix",
    "lint:report": "eslint packages/ -f json -o eslint-report.json || true",
    "format": "prettier --write \"packages/*/src/**/*.ts\"",
    "format:check": "prettier --check \"packages/*/src/**/*.ts\"",
    "typecheck": "pnpm -r run typecheck",
    "clean": "pnpm -r run clean"
  },
  "devDependencies": {
    "@celerity-sdk/runtime": "^0.2.3",
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@eslint/js": "^9.0.0",
    "@swc/core": "^1.15.11",
    "@types/debug": "^4.1.0",
    "@types/node": "^25.2.2",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.0.0",
    "unplugin-swc": "^1.5.9",
    "vitest": "^3.0.0"
  }
}
